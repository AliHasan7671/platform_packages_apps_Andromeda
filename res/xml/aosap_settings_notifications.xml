<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/notifications_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        android:key="notification_light"
        android:fragment="com.android.settings.applications.manageapplications.ManageApplications"
        android:title="@string/notification_light_settings" >
        <extra
            android:name="classname"
            android:value="com.android.settings.Settings$NotificationAppListActivity" />
    </Preference>

    <Preference
        android:key="charging_light"
        android:fragment="com.aosap.settings.fragments.BatteryLightSettings"
        android:title="@string/battery_light_settings" />

    <!-- Heads up -->
    <Preference
        android:key="heads_up_notifications"
        android:title="@string/heads_up_notifications"
        android:fragment="com.aosap.settings.fragments.HeadsUpSettings" />
    
    <PreferenceCategory
        android:key="flash_on_call_options"
        android:title="@string/flash_on_call_category" >

         <com.aosap.settings.preferences.SystemSettingSwitchPreference
            android:key="flash_on_call_waiting"
            android:title="@string/flash_on_call_title"
            android:defaultValue="false" />

         <com.aosap.settings.preferences.CustomSeekBarPreference
            android:key="flash_on_call_waiting_delay"
            android:max="1000"
            android:persistent="false"
            android:title="@string/flash_on_call_delay_title"
            settings:min="50"
            settings:units="ms"
            settings:interval="50"
            android:dependency="flash_on_call_waiting"/>
         </PreferenceCategory>

    <Preference
         android:key="ambient_decor"
         android:title="@string/ambient_decor_title"
         android:summary="@string/ambient_decor_summary"
         android:fragment="com.aosap.settings.fragments.AmbientDecorSettings" />

    <PreferenceCategory
        android:key="vibration_patterns"
        android:title="@string/ringtone_vibration_pattern" >

        <com.android.settingslib.widget.RadioButtonPreference
            android:key="pattern_dzzz_dzzz"
            android:title="@string/pattern_dzzz_dzzz" />

        <com.android.settingslib.widget.RadioButtonPreference
            android:key="pattern_dzzz_da"
            android:title="@string/pattern_dzzz_da" />

        <com.android.settingslib.widget.RadioButtonPreference
            android:key="pattern_mm_mm_mm"
            android:title="@string/pattern_mm_mm_mm" />

        <com.android.settingslib.widget.RadioButtonPreference
            android:key="pattern_da_da_dzzz"
            android:title="@string/pattern_da_da_dzzz" />

        <com.android.settingslib.widget.RadioButtonPreference
            android:key="pattern_da_dzzz_da"
            android:title="@string/pattern_da_dzzz_da" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_misc"
        android:title="@string/notification_misc">

        <com.aosap.settings.preferences.SystemSettingSwitchPreference
            android:key="notification_guts_kill_app_button"
            android:title="@string/notification_guts_kill_app_button_title"
            android:summary="@string/notification_guts_kill_app_button_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

        <com.aosap.settings.preferences.SystemSettingSwitchPreference
            android:key="notification_sound_vib_screen_on"
            android:title="@string/notification_sound_vib_screen_on_title"
            android:summary="@string/notification_sound_vib_screen_on_summary"
            android:defaultValue="true" />

</PreferenceScreen>
